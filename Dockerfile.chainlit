FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy project files
COPY pyproject.toml uv.lock ./
COPY src/ ./src/
COPY chainlit_app.py ./
COPY knowledge.yaml ./
COPY .chainlit/ ./.chainlit/
COPY public/ ./public/

# Install dependencies
RUN uv pip install --system -e .

# Expose port
EXPOSE 8001

# Run chainlit (not in dev mode for production)
CMD ["chainlit", "run", "chainlit_app.py", "--host", "0.0.0.0", "--port", "8001", "--headless"]
